<Window x:Class="LEDGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LED Grid Layout" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Canvas x:Name="MainCanvas" Grid.Row="0">
            <TextBlock Name="ClickPositionText" Canvas.Left="10" Canvas.Top="10" FontSize="16"/>
        </Canvas>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="NewJsonTextBox" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
    </Grid>
</Window>